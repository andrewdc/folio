---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
// Layouts can accept props like title, description, etc.
const { title = 'Welcome' } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<title>
			Andrew Colclough – UX & UI Designer{title ? ` · ${title}` : ''}
		</title>

		<!-- Icons & Fonts -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Rokkitt:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>

		<!-- Description -->
		<meta
			name="description"
			content="Andrew Colclough – UX & UI Designer"
		/>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta
			property="og:title"
			content="Andrew Colclough – UX & UI Designer"
		/>
		<meta
			property="og:description"
			content="Crafting intuitive and delightful user experiences."
		/>
		<meta property="og:url" content="https://andrewdc.com/" />
		<meta
			property="og:image"
			content="https://andrewdc.com/img/ogmnt.jpg"
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
	</head>
	<body>
		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-VW7YDCM8G9"
		>
		</script>
		<script>
			// @ts-nocheck
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag('js', new Date());

			gtag('config', 'G-VW7YDCM8G9');
		</script>
		<main class="full">
			<!-- <header><h1>{title}</h1></header> -->

			<!-- This renders the content of the page using this layout -->
			<div class="content">
				<slot />
			</div>
			<!-- <Footer
				title="Let's connect!"
				address="Example Address, 6 - Somewhere in the world (99999), Spain"
				text="email, linkedin, etc"
			/> -->
		</main>
	</body>
</html>
<style>
main.full {
	margin:0;
}
</style>
