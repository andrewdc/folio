---
const { name, title, text, imgSrc } = Astro.props;
---

<section
  class="bg-gray-900 bg-cover bg-center"
  style={`background-image: url(${imgSrc}); background-size: cover; background-repeat: no-repeat;`}
>
  <div class="content">
    <h1 class="">
      <span class="name">{name}</span>
      <span class="title">{title}</span>
    </h1>
    <h2 class="subhead">
      {text}
    </h2>
  </div>
</section>

<style>
  .content {
    margin: 0 auto;
    max-width: 960px;
  }
  section {
    padding: var(--space-xlg) 15vw;
  }
  h1 {
    font-family: var(--font-head), serif, system-ui;
    font-size: 6em;

    color: #fff;
    /* line-height: 150%; */
    /* margin: var(--space-lg) var(--space-lg) var(--space-lg); */
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: var(--space);
  }
  .name {
    font-weight: 800;
  }
  .title {
    font-size: 0.6em;
  }
  .subhead {
    font-family: var(--font-head), serif;
    font-size: 2em;
    font-weight: 100;
    /* margin: var(--space-lg); */
    line-height: 150%;
    color: #fff;
    font-family: var(--font-body), sans-serif;
    font-weight: 100;
  }
  @media (max-width: 1200px) {
    h1 {
      font-size: 5em;
    }
    .subhead {
      font-size: 2em;
    }
    section {
      padding: var(--space-xlg) 10vw;
    }
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 3.5em;
    }

    .subhead {
      font-size: 1.5em;
    }
  }
</style>
